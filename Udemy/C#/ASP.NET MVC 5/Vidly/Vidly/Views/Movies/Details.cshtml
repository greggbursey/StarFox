@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Name</td>
            @if (Model.Genre != null)
            {
                <td>@Model.Genre.Name</td>
            }
            else
            {
                <td><em>No Genre</em></td>
            }
        </tr>
    </tbody>
</table>